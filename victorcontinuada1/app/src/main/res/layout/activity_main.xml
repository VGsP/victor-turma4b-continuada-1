<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual é o seu nome" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nome" />

    <TextView
        android:id="@+id/tv_alimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Insira a quantidade de alimentos ingeridos:"
        app:layout_constraintTop_toBottomOf="@id/et_nome" />


    <TextView
        android:id="@+id/tv_coca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Latinhas de coca"
        app:layout_constraintTop_toBottomOf="@id/tv_alimentos" />

    <EditText
        android:id="@+id/et_coca"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_coca" />


    <TextView
        android:id="@+id/tv_fritas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Porções de fritas"
        app:layout_constraintTop_toBottomOf="@id/et_coca" />

    <EditText
        android:id="@+id/et_fritas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_fritas" />

    <TextView
        android:id="@+id/tv_hamburguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Hamburgueres"
        app:layout_constraintTop_toBottomOf="@id/et_fritas" />


    <EditText
        android:id="@+id/et_hamburguer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_hamburguer" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="calcular"
        android:text="calcular"
        app:layout_constraintTop_toBottomOf="@id/et_hamburguer" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>